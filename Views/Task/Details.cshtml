@model TaskResolveViewModel
<partial name="_Header" />

<h1>@Model.Title</h1>
<form asp-action="SetRating" asp-controller="Task">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="range" min="1" max="5" name="ratingValue" />
    <input type="submit" value="Set Rating" class="btn btn-secondary" />
</form>
<div class="form-group">
    <label class="control-label">Text</label>
    <label class="control-label">@Model.Description</label>
</div>

<form>
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="Title" value="@Model.Title" />
    <input type="hidden" asp-for="Description" value="@Model.Description" />
    <div class="form-group">
        <label class="control-label">Solution</label>
        <input type="text" asp-for="@Model.Answer" />
    </div>
    <div class="form-group">
        <input type="submit" asp-action="Resolve" asp-controller="Task" value="Resolve" class="btn btn-secondary" />
    </div>
</form>